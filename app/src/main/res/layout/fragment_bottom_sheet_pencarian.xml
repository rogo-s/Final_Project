<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.BottomSheetPencarianFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="600dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/btnSearch"
            android:layout_width="314dp"
            android:layout_height="52dp"
            app:queryBackground="@drawable/radius_otp"
            android:hint="Masukkan kota atau negara"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="17dp"
            android:paddingStart="5dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/radius_otp"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_24"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPencarianTerkini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pencarian terkini"
            android:textSize="16sp"
            android:textColor="@color/neutral_05"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSearch"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textSize="14sp"
            android:textColor="@color/alert01"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnSearch"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>