<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.SetPenempunganFragment">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#151515" />
    <View
        android:id="@+id/gridTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7C7C7C"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnClose"/>

    <LinearLayout
        android:id="@+id/passangerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/gridTop">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAdult"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_adult" />
            <LinearLayout
                android:id="@+id/layoutAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgAdult">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dewasa"
                    android:textSize="14sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    android:lineSpacingExtra="-1sp"
                    android:gravity="top"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(12 tahun keatas)"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:lineSpacingExtra="0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerAdult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/minus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                <TextView
                    android:id="@+id/passangerAdult"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:background="@drawable/background_border_neutral"
                    android:textAlignment="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <ImageButton
                    android:id="@+id/addPassangerAdult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/plus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@id/gridTop1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgChild"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_child" />
            <LinearLayout
                android:id="@+id/layoutChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgChild">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anak"
                    android:textSize="14sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    android:lineSpacingExtra="-1sp"
                    android:gravity="top"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2-11 tahun)"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:lineSpacingExtra="0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/minus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                <TextView
                    android:id="@+id/passangerChild"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:background="@drawable/background_border_neutral"
                    android:textAlignment="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <ImageButton
                    android:id="@+id/addPassangerChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/plus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/gridTop2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBaby"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baby" />

            <LinearLayout
                android:id="@+id/layoutBaby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgBaby"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:lineSpacingExtra="-1sp"
                    android:text="Bayi"
                    android:textColor="#151515"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="0sp"
                    android:text="(Dibawah 2 tahun)"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/minus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                <TextView
                    android:id="@+id/passangersBaby"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:background="@drawable/background_border_neutral"
                    android:textAlignment="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <ImageButton
                    android:id="@+id/addPassangerBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_border_primary_purple"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/plus"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/gridTop3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/darkblue04"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/daftar"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passangerLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>